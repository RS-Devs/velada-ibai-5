---
import Layout from '@/layouts/Layout.astro'
import { porra } from '@/consts/pageTitles'
import BackgroundLayout from '@/layouts/BackgroundLayout.astro'
import { COMBATS } from '@/consts/combats'
import { FIGHTERS } from '@/consts/fighters'
import { countries } from '@/consts/countries'
---

<Layout title={porra}>
  <BackgroundLayout>
    <div class="absolute top-28 mx-auto w-full max-w-6xl px-4 py-8">
      <header class="mb-12 text-center">
        <h2 class="animate-fade-in animate-delay-300 text-4xl font-bold text-white mb-4">
          PARTICIPA EN LA PORRA
        </h2>
        <p class="text-[#00ffb3] text-xl">
          Vota por tus luchadores favoritos y participa en las predicciones
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {COMBATS.map((combat) => {
          const fighter1 = FIGHTERS.find((f) => f.id === combat.fighters[0]);
          const fighter2 = FIGHTERS.find((f) => f.id === combat.fighters[1]);
          const fighter1Country = countries.find(c => c.id === fighter1?.country);
          const fighter2Country = countries.find(c => c.id === fighter2?.country);
          
          return (
            <div class="bg-[#3b1c2e] rounded-lg overflow-hidden">
              <div class="p-4 bg-black/30">
                <h3 class="text-center text-2xl font-bold text-white mb-2">
                  Combate {combat.number}
                </h3>
              </div>
              
              <div class="p-6">
                <div class="flex flex-col md:flex-row justify-between items-center">
                  {/* Luchador 1 */}
                  <div class="w-full md:w-[38%] text-center mb-8 md:mb-0">
                    <div class="relative mx-auto w-28 h-28 mb-4">
                      <div class="absolute inset-0 rounded-full border-4 border-[#ff3a8c]"></div>
                      <img 
                        src={`/images/fighters/cards/${fighter1?.id}.webp`} 
                        alt={`Avatar de ${fighter1?.name}`}
                        class="w-full h-full rounded-full object-cover object-top"
                      />
                      {/* Bandera del país */}
                      <div class="absolute -bottom-2 -right-2 w-10 h-10 rounded-full overflow-hidden border-2 border-white">
                        <img 
                          src={fighter1Country?.image.src}
                          alt={`Bandera de ${fighter1Country?.name ?? 'Desconocido'}`}
                          class="w-full h-full object-cover"
                        />
                      </div>
                    </div>
                    <div class="h-14 flex justify-center items-center mb-4">
                      <img 
                        src={`/images/fighters/text/${fighter1?.id}.webp`} 
                        alt={fighter1?.name}
                        class="h-full w-auto filter brightness-110"
                      />
                    </div>
                    <button 
                      class="vote-button w-full py-2 bg-[#ff3a8c] text-white font-bold rounded-lg hover:bg-opacity-80 transition-all"
                      data-combat={combat.id}
                      data-fighter={fighter1?.id}
                    >
                      VOTAR
                    </button>
                  </div>
                  
                  {/* VS */}
                  <div class="w-full md:w-[24%] text-center mb-8 md:mb-0">
                    <div class="text-white text-4xl font-bold">VS</div>
                  </div>
                  
                  {/* Luchador 2 */}
                  <div class="w-full md:w-[38%] text-center">
                    <div class="relative mx-auto w-28 h-28 mb-4">
                      <div class="absolute inset-0 rounded-full border-4 border-[#3a8cff]"></div>
                      <img 
                        src={`/images/fighters/cards/${fighter2?.id}.webp`} 
                        alt={`Avatar de ${fighter2?.name}`}
                        class="w-full h-full rounded-full object-cover object-top"
                      />
                      {/* Bandera del país */}
                      <div class="absolute -bottom-2 -right-2 w-10 h-10 rounded-full overflow-hidden border-2 border-white">
                        <img 
                          src={fighter2Country?.image.src}
                          alt={`Bandera de ${fighter2Country?.name ?? 'Desconocido'}`}
                          class="w-full h-full object-cover"
                        />
                      </div>
                    </div>
                    <div class="h-14 flex justify-center items-center mb-4">
                      <img 
                        src={`/images/fighters/text/${fighter2?.id}.webp`} 
                        alt={fighter2?.name}
                        class="h-full w-auto filter brightness-110"
                      />
                    </div>
                    <button 
                      class="vote-button w-full py-2 bg-[#3a8cff] text-white font-bold rounded-lg hover:bg-opacity-80 transition-all"
                      data-combat={combat.id}
                      data-fighter={fighter2?.id}
                    >
                      VOTAR
                    </button>
                  </div>
                </div>
                
                <div class="mt-6 pt-4 border-t border-white/20">
                  <div class="flex justify-between items-center">
                    <div class="w-[45%]">
                      <div class="bg-[#1e1e1e] h-6 rounded-full overflow-hidden">
                        <div class="fighter1-progress bg-[#ff3a8c] h-full" style="width: 50%"></div>
                      </div>
                    </div>
                    <div class="text-white font-bold">VS</div>
                    <div class="w-[45%]">
                      <div class="bg-[#1e1e1e] h-6 rounded-full overflow-hidden">
                        <div class="fighter2-progress bg-[#3a8cff] h-full" style="width: 50%"></div>
                      </div>
                    </div>
                  </div>
                  <div class="flex justify-between mt-2">
                    <span class="fighter1-percent text-white font-bold">50%</span>
                    <span class="fighter2-percent text-white font-bold">50%</span>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>
      
      <div id="vote-success" class="fixed inset-0 flex items-center justify-center bg-black/80 z-50 hidden">
        <div class="bg-[#3b1c2e] p-8 rounded-lg max-w-md text-center">
          <h3 class="text-2xl font-bold text-white mb-4">¡Voto registrado!</h3>
          <p class="text-white mb-6">Gracias por participar en la porra de La Velada del Año V</p>
          <button id="close-modal" class="px-6 py-2 bg-[#00ffb3] text-black font-bold rounded-lg hover:bg-opacity-80 transition-all">
            CERRAR
          </button>
        </div>
      </div>
    </div>
  </BackgroundLayout>
</Layout>
